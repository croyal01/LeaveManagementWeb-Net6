@model LeaveManagement.Common.Models.LeaveRequestCreateVM
@{
    ViewData["Title"] = "Apply for Leave ";
}

<h1>Apply For Leave</h1>


<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class="form-select" asp-items="Model?.LeaveTypes">
                    <option>Select Leave Type</option>
                </select>
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
            </div>
            <br />
            <div class="row">  
                <div class="col-md-6">
                    <div class="form-group >
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" /> @*type="text"*@
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>

                <br />
                
                <div class="col-md-6">
                    <div class="form-group ">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control datepicker" /> @*type="text*@
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <br />

            <div class="form-group">
                <label asp-for="DateRequested" class="control-label"></label>
                <label class="control-label">@DateTime.Now</label>
                @*<input asp-for="DateRequested" class="form-control" />*@
                <span asp-validation-for="DateRequested" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="RequestComments" class="control-label"></label>
                <textarea asp-for="RequestComments" class="form-control"> </textarea>

                @*<input asp-for="RequestComments" class="form-control" />*@
                <span asp-validation-for="RequestComments" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                @*<a class="btn btn-dark" asp-action="MyLeave">Cancel</a>*@
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Back to My Leave</a>
            </div>
        </form>
    </div>
</div>

